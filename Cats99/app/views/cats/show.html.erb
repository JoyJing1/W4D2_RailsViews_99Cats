<h1> <%= "#{@cat.name}" %> </h1>

<table>
  <tr>
    <th>Birth Date</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>

  <tr>
    <td> <%= @cat.birth_date %> </td>
    <td> <%= @cat.color %> </td>
    <td> <%= @cat.sex %> </td>
    <td> <%= @cat.description %> </td>
  </tr>
</table>

<p>Existing Requests</p>
<% @crr.each do |request| %>
  <ul>
    <li>
      Request Period: <%= "#{request.start_date} - #{request.end_date}" %>
      <%= request.status %>
      <form action="/cat_rental_requests/<%= request.id %>" method="post">
        <input type="hidden" name="_method" value="PATCH">
        <button name="crr[status]" type="" value="APPROVED">Approve</button>
      </form>

      <form action="/cat_rental_requests/<%= request.id %>" method="post">
        <input type="hidden" name="_method" value="PATCH">
        <button name="crr[status]" type="" value="DENIED">Deny</button>
      </form>
    </li>
  </ul>
<% end  %>
